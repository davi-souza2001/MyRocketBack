generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name        String
  nickname    String @unique
  email       String @unique
  seniority   String
  area        String
  comumone    String
  comumtwo    String
  comumthree  String
  description String
  linkedin    String
  github      String @unique
  youtube     String
  instagram   String
  avatar      String
  gas         Int

  @@map("users")
}

model Post{
  id String @id @default(uuid())
  content String
  userName String
  userNick String
  email String
  tech String
  avatar String
  likes Json

  @@map("posts")
}
